<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Finance Tracker</title>
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/home.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1 class="logo">ðŸ’° Finance Tracker</h1>
            <p class="welcome-text">Welcome back, <%=email%>!</p>
        </div>
    </header>

    <nav class="navigation">
        <button id="transaction-btn" class="nav-btn active">Transactions</button>
        <button id="goals-btn" class="nav-btn">Goals</button>
    </nav>

    <main class="main-content">
        <!-- Transactions Section -->
        <div id="transactions-section" class="content-section active">
            <div class="section-header">
                <h2>Transaction Management</h2>
                <div class="btn-container">
                    <button id="add-transaction-btn" class="btn btn-primary">Add Transaction</button>
                    <button id="show-transactions-btn" class="btn btn-secondary">Show Transactions</button>
                </div>
            </div>

            <!-- Add Transaction Form -->
            <div id="add-transaction" class="form-container hidden">
                <h3>Add New Transaction</h3>
                <form id="transaction-form">
                    <div class="form-group">
                        <label for="transaction-name">Name</label>
                        <input type="text" id="transaction-name" placeholder="Enter transaction name" required>
                    </div>
                    <div class="form-group">
                        <label for="transaction-amount">Amount</label>
                        <input type="number" step="0.01" id="transaction-amount" placeholder="Enter amount" required>
                    </div>
                    <div class="form-group">
                        <label for="transaction-detail">Details</label>
                        <input type="text" id="transaction-detail" placeholder="Enter additional details">
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <button type="button" id="cancel-transaction" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>

            <!-- Show Transactions with Sorting -->
            <div id="show-transactions" class="transactions-container hidden">
                <div class="sorting-controls">
                    <h3>Your Transactions</h3>
                    <div class="sort-options">
                        <select id="sort-by" class="sort-select">
                            <option value="created_at">Time</option>
                            <option value="transaction_name">Name</option>
                            <option value="transaction_amount">Amount</option>
                        </select>
                        <select id="sort-order" class="sort-select">
                            <option value="DESC">Descending</option>
                            <option value="ASC">Ascending</option>
                        </select>
                        <button id="apply-sort" class="btn btn-outline">Apply Sort</button>
                    </div>
                </div>
                <div id="transactions-list" class="transactions-list"></div>
                <div id="transactions-pagination" class="pagination-controls hidden">
                    <button id="tx-prev-page" class="btn btn-outline">Prev</button>
                    <span id="tx-page-indicator">Page 1</span>
                    <button id="tx-next-page" class="btn btn-outline">Next</button>
                </div>
            </div>
        </div>

        <!-- Goals Section -->
        <div id="goals-section" class="content-section">
            <div class="section-header">
                <h2>Financial Goals</h2>
                <div class="btn-container">
                    <button id="add-goal-btn" class="btn btn-primary">Add Goal</button>
                    <button id="show-goals-btn" class="btn btn-secondary">Show Goals</button>
                    <button id="show-monthly-summary-btn" class="btn btn-outline">Monthly Summary</button>
                </div>
            </div>

            <!-- Add Goal Form -->
            <div id="add-goal" class="form-container hidden">
                <h3>Create New Goal</h3>
                <form id="goal-form">
                    <div class="form-group">
                        <label for="goal-name">Goal Name</label>
                        <input type="text" id="goal-name" placeholder="Enter goal name" required>
                    </div>
                    <div class="form-group">
                        <label for="goal-amount">Total Amount</label>
                        <input type="number" step="0.01" id="goal-amount" placeholder="Enter total amount" required>
                    </div>
                    <div class="form-group">
                        <label for="goal-freq">Saving Frequency</label>
                        <select id="goal-freq" required>
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="goal-deadline">Goal Deadline</label>
                        <input type="date" id="goal-deadline" required>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">Create Goal</button>
                        <button type="button" id="cancel-goal" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>

            <!-- Show Goals -->
            <div id="show-goals" class="goals-container hidden">
                <h3>Your Financial Goals</h3>
                <div id="goals-list" class="goals-list"></div>
            </div>

            <!-- Monthly Summary -->
            <div id="monthly-summary" class="reports-container hidden"></div>
        </div>
    </main>

    <!-- Edit Transaction Modal -->
    <div id="edit-transaction-modal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Transaction</h3>
                <button class="close-btn" id="close-transaction-modal">&times;</button>
            </div>
            <form id="edit-transaction-form">
                <input type="hidden" id="edit-transaction-id">
                <div class="form-group">
                    <label for="edit-transaction-name">Name</label>
                    <input type="text" id="edit-transaction-name" required>
                </div>
                <div class="form-group">
                    <label for="edit-transaction-amount">Amount</label>
                    <input type="number" step="0.01" id="edit-transaction-amount" required>
                </div>
                <div class="form-group">
                    <label for="edit-transaction-detail">Details</label>
                    <input type="text" id="edit-transaction-detail">
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" id="cancel-edit-transaction">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Goal Modal -->
    <div id="edit-goal-modal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Goal</h3>
                <button class="close-btn" id="close-goal-modal">&times;</button>
            </div>
            <form id="edit-goal-form">
                <input type="hidden" id="edit-goal-id">
                <div class="form-group">
                    <label for="edit-goal-name">Goal Name</label>
                    <input type="text" id="edit-goal-name" required>
                </div>
                <div class="form-group">
                    <label for="edit-goal-amount">Total Amount</label>
                    <input type="number" step="0.01" id="edit-goal-amount" required>
                </div>
                <div class="form-group">
                    <label for="edit-goal-freq">Saving Frequency</label>
                    <select id="edit-goal-freq" required>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="edit-goal-deadline">Goal Deadline</label>
                    <input type="date" id="edit-goal-deadline" required>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" id="cancel-edit-goal">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Goal Logs Modal -->
    <div id="goal-logs-modal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Goal Spending History</h3>
                <button class="close-btn" id="close-goal-logs-modal">&times;</button>
            </div>
            <div class="goal-logs-content">
                <div id="goal-logs-list" class="goal-logs-list"></div>
                <div class="add-saving-section">
                    <h4>Add New Saving</h4>
                    <form id="add-saving-form">
                        <input type="hidden" id="saving-goal-id">
                        <div class="form-group">
                            <label for="saving-amount">Amount to Save</label>
                            <input type="number" step="0.01" id="saving-amount" placeholder="Enter amount" required>
                        </div>
                        <div class="form-group">
                            <label for="saving-note">Note (optional)</label>
                            <input type="text" id="saving-note" placeholder="Add a note about this saving">
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Save Amount</button>
                            <button type="button" class="btn btn-secondary" id="cancel-saving">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="./js/home.js"></script>
</body>
</html>